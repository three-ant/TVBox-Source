{
  "name": "CustomTVBoxSource",
  "type": 3,
  "api": "https://api.example.com/",
  "searchable": 1,
  "quickSearch": 0,
  "filterable": 1,
  "categories": [
    {
      "type_id": "1",
      "type_name": "电影"
    },
    {
      "type_id": "2",
      "type_name": "电视剧"
    }
  ],
  "home": {
    "推荐": {
      "url": "https://api.example.com/home/recommend",
      "method": "GET",
      "headers": {
        "User-Agent": "TVBox/1.0"
      }
    },
    "最新": {
      "url": "https://api.example.com/home/latest",
      "method": "GET",
      "headers": {
        "User-Agent": "TVBox/1.0"
      }
    }
  },
  "category": {
    "url": "https://api.example.com/category/{type_id}/page/{pg}",
    "method": "GET",
    "headers": {
      "User-Agent": "TVBox/1.0"
    },
    "params": {
      "pg": "1"
    }
  },
  "detail": {
    "url": "https://api.example.com/video/{vod_id}",
    "method": "GET",
    "headers": {
      "User-Agent": "TVBox/1.0"
    }
  },
  "search": {
    "url": "https://api.example.com/search?keyword={wd}",
    "method": "GET",
    "headers": {
      "User-Agent": "TVBox/1.0"
    }
  },
  "play": {
    "url": "https://api.example.com/play/{vod_id}",
    "method": "GET",
    "headers": {
      "User-Agent": "TVBox/1.0"
    }
  }
}
